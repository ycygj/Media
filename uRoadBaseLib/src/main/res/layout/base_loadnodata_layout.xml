<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_view_load_nodata"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:gravity="center"
    android:visibility="gone"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/base_ivloadingfail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:src="@drawable/base_nodata" />

    <TextView
        android:id="@+id/base_txt_neterr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:lineSpacingExtra="10dip"
        android:textColor="#ff585858"
        android:textSize="16sp" 
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnBaseBaoliao"
        android:layout_width="100dip"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:background="@drawable/base_btn_blue_selector"
        android:text="我要报料"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</LinearLayout>